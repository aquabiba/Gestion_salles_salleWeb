<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <display-name>AuthServlet</display-name>
    <display-name>ProfServlet</display-name>
    <display-name>CoordServlet</display-name>
    <servlet>
        <description/>
        <display-name>AuthServlet</display-name>
        <servlet-name>log</servlet-name>
        <servlet-class>Servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>log</servlet-name>
        <url-pattern>/log</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CS</servlet-name>
        <servlet-class>Servlet.ProfServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CS</servlet-name>
        <url-pattern>/CS</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Auth.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuration du filtre -->
    <filter>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <filter-class>Servlet.RoleBasedAccessFilter</filter-class>
    </filter>

    <!-- Mapping du filtre sur toutes les URLs -->
    <filter-mapping>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Optionnellement, vous pouvez définir une page d’erreur globale -->
    <error-page>
        <error-code>403</error-code>
        <location>/accessDenied.jsp</location>
    </error-page>

    <!-- Définition de la page de login par défaut -->
    <!-- Cela dépend de votre mécanisme d'authentification. Si vous utilisez
         l'authentification gérée par le conteneur, vous pouvez configurer
         une login-config. Sinon, ignorez cette partie. -->
    <!--<login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login-error.jsp</form-error-page>
        </form-login-config>
    </login-config>-->
</web-app>